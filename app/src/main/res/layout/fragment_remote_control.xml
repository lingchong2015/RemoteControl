<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/table_layout_remote_control"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_fragement_background"
    android:stretchColumns="*">

    <TextView
        android:id="@+id/text_view_selected_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/window_patch"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/text_view_working_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="7dp"
        android:layout_weight="1"
        android:background="@drawable/bar_patch"
        android:gravity="center"
        android:textColor="#cccccc"
        android:textSize="20dp"
        android:textStyle="italic"/>

    <include
        android:id="@+id/include"
        layout="@layout/button_row"
        android:layout_weight="1"
        />

    <include
        layout="@layout/button_row"
        android:layout_weight="1"
        />

    <include
        layout="@layout/last_button_row"
        android:layout_weight="1"
        />

</TableLayout>